{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true
  },
  "root": true,
  "rules": {
    "object-curly-spacing": [2, "always"],
    "comma-dangle": [
      2,
      "never"
    ],
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-bitwise": "off",
    "no-continue": "off",
    "no-unused-expressions": "off",
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "require-jsdoc": "off",
    "no-underscore-dangle": "off",
    "no-invalid-this": "off",
    "no-mixed-operators": "off",
    "newline-per-chained-call": "off",
    "class-methods-use-this": "off",
    "max-len": [
      1,
      150
    ],
    "linebreak-style": [1,"unix"],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1,
        "MemberExpression": 0
      }
    ]
  }
}
